<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ListeActivity">

    <ImageView
        android:id="@+id/imgKapak"
        android:layout_width="@dimen/activity_liste_img_kapak_widht"
        android:layout_height="@dimen/activity_liste_img_kapak_height"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/listedetaylogo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvModeller"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_liste_rcvModeller_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgKapak"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="16dp"
        tools:listitem="@layout/cardview_iphone" />


</androidx.constraintlayout.widget.ConstraintLayout>